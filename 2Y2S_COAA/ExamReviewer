def run_exam():
    print("\nCOAA REVIEWER EXAM")
    choice = input("Choose a set (A / B / C): ").strip().upper()

    if choice not in question_sets:
        print("Invalid choice.")
        return

    questions = question_sets[choice][:]
    random.shuffle(questions)

    score = 0
    print(f"\n--- SET {choice} ---\n")

    for i, (q, opts, ans) in enumerate(questions, 1):
        print(f"{i}. {q}")
        for o in opts:
            print(o)
        user = input("Answer (A/B/C/D): ").strip().upper()

        if user == ans:
            score += 1
            print("Correct!\n")
        else:
            print(f"Wrong! Correct answer: {ans}\n")

    print(f"Final Score: {score} / 20")


while True:
    run_exam()
    again = input("\nTake another set? (Y/N): ").strip().upper()
    if again != "Y":
        print("Good luck on your COAA exam! ðŸ’ª")
        break
